<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

     <ImageView
            android:id="@+id/imageView1"
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:src="@drawable/ic_launcher"/>
    
    
   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

     
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="姓名"
                    android:layout_marginLeft="70dp"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/showname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:ems="10"
                    android:background="@null"
                    android:textColorHint="#AAAAAA" >
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="号码"
                    android:layout_marginLeft="70dp" 
                    android:textSize="20dp"/>

                <TextView
                    android:id="@+id/shownumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:ems="10"
                    android:background="@null"
                    android:textColorHint="#AAAAAA" >
                </TextView>
            </LinearLayout>
            
            
             <Button
	            android:id="@+id/delete"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center"
	            android:background="#ffffff"
	            android:textColor="#66CC33"
	            android:text="删除联系人" />
      
            
        </LinearLayout>
    </LinearLayout>

  

     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:gravity="bottom"
        >
    
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:background="#66CC33"
	        >"
	
	        <Button
	            android:id="@+id/sendmessage"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:layout_gravity="bottom"
	            android:background="#66CC33"
	            android:textColor="#ffffff"
	            android:text="消息" />
	
	        <Button
	            android:id="@+id/makephonecall"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:layout_gravity="bottom"
	            android:background="#66CC33"
	            android:textColor="#ffffff"
	            android:text="拨号" />

    	</LinearLayout>
    </LinearLayout>

</LinearLayout><!-- From: file:/Users/zmc/AndroidStudioProjects/hiMineFriend/app/src/main/res/layout/touch_people.xml -->